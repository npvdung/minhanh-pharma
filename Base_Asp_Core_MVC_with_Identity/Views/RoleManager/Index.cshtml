@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-cam">Quản lý role</h1>

<form method="post" asp-action="AddRole" asp-controller="RoleManager" class="my-4">
    <div class="input-group w-50 mx-auto">
        <input name="roleName" class="form-control" placeholder="Enter role name" />
        <button class="btn btn-cam ms-2">Thêm role mới</button>
    </div>
</form>

<div class="table-section">
    <table class="table table-bordered custom-table">
        <thead class="table-header">
            <tr>
                <th>ID</th>
                <th>Role</th>
                @*<th>Actions</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.NormalizedName</td>
                    <td>@role.Name</td>
                    @*<td>
                <a asp-controller="RoleManager" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="RoleManager" asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger ms-2">Delete</a>
                </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .text-cam {
        color: #ff7a00;
    }

    .btn-cam {
        background-color: #ff7a00;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-cam:hover {
            background-color: #e06900;
            transform: scale(1.05);
        }

    .table-section {
        margin: 20px 0;
    }

    .custom-table {
        width: 100%;
        margin: 0 auto;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-header {
        background-color: #ff7a00;
        color: #fff;
        text-align: center;
    }

    .custom-table th, .custom-table td {
        text-align: center;
        padding: 12px;
    }

    .custom-table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .custom-table tbody tr:hover {
        background-color: #ffecd8;
    }

    .btn-primary, .btn-danger {
        font-weight: bold;
        padding: 8px 15px;
        border-radius: 6px;
        transition: transform 0.2s;
    }

    .btn-primary {
        background-color: #ff7a00;
        border: none;
    }

        .btn-primary:hover {
            background-color: #e06900;
            transform: scale(1.05);
        }

    .btn-danger {
        background-color: #ff4d4d;
        border: none;
    }

        .btn-danger:hover {
            background-color: #e03b3b;
            transform: scale(1.05);
        }

</style>
