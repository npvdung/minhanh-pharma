<script>
    document.addEventListener("DOMContentLoaded", function () {
        const navLinks = document.querySelectorAll(".nav-link");
        const dropdownMenus = document.querySelectorAll(".dropdown-menu");

        // Lấy trạng thái lưu trong localStorage
        const savedPath = localStorage.getItem("activePath");

        if (savedPath) {
            const savedLink = document.querySelector(`.nav-link[href='${savedPath}']`);
            if (savedLink) {
                activateLink(savedLink);
            }
        }

        // Hàm để kích hoạt link và item cha
        function activateLink(link) {
            // Xóa active từ các item khác
            document.querySelectorAll(".nav-item").forEach(item => item.classList.remove("active"));

            // Gán active cho link hiện tại
            const navItem = link.closest(".nav-item");
            if (navItem) {
                navItem.classList.add("active");

                // Nếu link nằm trong dropdown, active cha
                const parentDropdown = navItem.closest(".has-dropdown");
                if (parentDropdown) {
                    parentDropdown.classList.add("active");
                }
            }
        }

        // Thêm sự kiện click cho tất cả nav-links
        navLinks.forEach(link => {
            link.addEventListener("click", function (e) {
                const href = link.getAttribute("href");
                if (href && href !== "#") {
                    // Lưu đường dẫn vào localStorage
                    localStorage.setItem("activePath", href);

                    // Kích hoạt link
                    activateLink(link);
                }
            });
        });

        // Xử lý hover để hiển thị dropdown
        document.querySelectorAll(".nav-item.has-dropdown").forEach(item => {
            item.addEventListener("mouseenter", function () {
                const dropdown = item.querySelector(".dropdown-menu");
                if (dropdown) dropdown.style.display = "block";
            });
            item.addEventListener("mouseleave", function () {
                const dropdown = item.querySelector(".dropdown-menu");
                if (dropdown) dropdown.style.display = "none";
            });
        });
    });


</script>



