@using Base_Asp_Core_MVC_with_Identity.Models.View;
@model DashboardViewModel

@{
    ViewData["Title"] = "";
}
<style>
    .stats-overview {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 20px;
    }

    .stat-card {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card h3 {
            font-size: 1.2rem;
            color: #495057;
        }

        .stat-card p {
            font-size: 2rem;
            color: #FF7F00;
            margin-top: 10px;
        }

    .charts {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .chart {
        flex: 1;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .table-section {
        margin-top: 20px;
    }

        .table-section h4 {
            font-size: 1.3rem;
            color: #495057;
            margin-bottom: 15px;
        }

    .table-responsive {
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .table-section {
        margin-top: 20px;
    }

        .table-section h4 {
            font-size: 1.3rem;
            color: #495057;
            margin-bottom: 15px;
        }

    .table-responsive {
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .product-table {
        width: 100%;
        border-collapse: collapse;
    }

        .product-table thead tr {
            background-color: #FF7F00;
            color: #ffffff;
        }

        .product-table th,
        .product-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .product-table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .product-table .status {
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            color: #ffffff;
        }

            .product-table .status.available {
                background-color: #28a745;
            }

            .product-table .status.limited {
                background-color: #ffc107;
                color: #212529;
            }

            .product-table .status.unavailable {
                background-color: #dc3545;
            }

</style>

<div class="stats-overview">
    <div class="stat-card">
        <h3>Tổng số Khách hàng</h3>
        <p>@Model.TotalCustomers</p>
    </div>
    <div class="stat-card">
        <h3>Doanh thu</h3>
        <p>@string.Format("{0:N2} VND", Model.Revenue)</p>
    </div>

    <div class="stat-card">
        <h3>Sản phẩm bán ra</h3>
        <p>@Model.ProductsSold</p>
    </div>
    <div class="stat-card">
        <h3>Số hóa đơn</h3>
        <p>@Model.OrdersCompleted</p>
    </div>
</div>


<div class="charts">
    <div class="chart">
        <h4>Biểu đồ Doanh Thu</h4>
        <canvas id="revenueChart"></canvas>
    </div>
    <div class="chart">
        <h4>Biểu đồ Người Dùng</h4>
        <canvas id="userChart"></canvas>
    </div>
</div>

<div class="table-section">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:10px;">
        <h4>Chi tiết sản phẩm sắp hết hạn</h4>

        <!-- Filter khoảng thời gian -->
        <form asp-controller="Home" asp-action="Index" method="get" id="expiry-filter-form"
              style="display:flex; align-items:center; gap:8px;">
            <label for="expiryRange" style="margin:0;">Khoảng thời gian:</label>
            <select id="expiryRange" name="range" class="form-control"
                    onchange="document.getElementById('expiry-filter-form').submit();">
                <option value="7">1 tuần tới</option>
                <option value="30">1 tháng tới</option>
                <option value="90">3 tháng tới</option>
                <option value="180">6 tháng tới</option>
            </select>
        </form>
    </div>

    <div class="table-responsive">
        <table class="product-table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng tồn</th>
                    <th>Ngày hết hạn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductDetails)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.QuantitySold</td>
                        <td>@item.ExpirationDate?.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Dữ liệu biểu đồ từ ViewModel
    const revenueData = @Html.Raw(Json.Serialize(Model.RevenueChartData));
    const userData = @Html.Raw(Json.Serialize(Model.UserChartData));
    const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));

    // Biểu đồ Doanh thu
    const ctxRevenue = document.getElementById('revenueChart').getContext('2d');
    const revenueChart = new Chart(ctxRevenue, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Doanh thu (VND)',
                data: revenueData,
                borderColor: '#FF7F00',
                backgroundColor: 'rgba(255, 127, 0, 0.2)',
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                }
            }
        }
    });

    // Biểu đồ Người dùng
    const ctxUser = document.getElementById('userChart').getContext('2d');
    const userChart = new Chart(ctxUser, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Người dùng mới',
                data: userData,
                backgroundColor: '#FF7F00',
                borderColor: '#FF7F00',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                }
            }
        }
    });
    (function () {
            var currentRange = @Model.ExpiryRangeDays;   // 7, 30, 90, 180
            var sel = document.getElementById('expiryRange');
            if (!sel) return;

            for (var i = 0; i < sel.options.length; i++) {
                if (parseInt(sel.options[i].value) === currentRange) {
                    sel.selectedIndex = i;
                    break;
                }
            }
        })();
</script>