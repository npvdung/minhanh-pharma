@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="col-md-12">
    <div class="profile-form">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <!-- Thông tin cá nhân bên trái -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Input_FirstName">Họ và tên</label>
                        <input asp-for="Input.FirstName" id="Input_FirstName" class="form-control"/>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Input_LastName">Chức vụ</label>
                        <input asp-for="Input.LastName" id="Input_LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Input_Username">Tên đăng nhập</label>
                        <input asp-for="Input.Username" id="Input_Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Input_PhoneNumber">Số điện thoại</label>
                        <input asp-for="Input.PhoneNumber" id="Input_PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <!-- Nút Lưu -->
                    <div class="form-group">
                        <button id="update-profile-button" type="submit" class="btn btn-save">Lưu thay đổi</button>
                    </div>
                </div>
                <!-- Ảnh đại diện bên phải -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Input_ProfilePicture">Ảnh đại diện</label>
                        <div class="profile-picture">
                            @if (Model.Input.ProfilePicture != null)
                            {
                                <img id="profilePicture" style="width: 100%; height: 100%; object-fit: cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                            }
                            else
                            {
                                <img id="profilePicture" style="width: 100%; height: 100%; object-fit: cover" src="default-avatar.jpg">
                            }
                        </div>
                        <input type="file"
                               accept="image/*"
                               asp-for="Input.ProfilePicture"
                               class="form-control-file"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
