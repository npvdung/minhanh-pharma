@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập - Quản lý hiệu thuốc";
    Layout = null;
}
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #4c9cdb, #ffffff); /* Gradient nền xanh nước biển sang trắng */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 450px;
            padding: 40px 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .login-box h2 {
            font-size: 2rem;
            color: #2d2d2d;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .form-floating {
            margin-bottom: 20px;
            position: relative;
        }

            .form-floating input {
                width: 100%;
                padding: 15px;
                border: 1px solid #ddd;
                border-radius: 10px;
                outline: none;
                font-size: 16px;
                transition: all 0.3s ease;
            }

                .form-floating input:focus {
                    border-color: #4c9cdb;
                    box-shadow: 0 0 5px rgba(76, 156, 219, 0.5);
                }

            .form-floating label {
                position: absolute;
                top: 50%;
                left: 15px;
                transform: translateY(-50%);
                font-size: 14px;
                color: #aaa;
                transition: all 0.3s ease;
            }

            .form-floating input:focus + label {
                top: -5px;
                font-size: 12px;
                color: #4c9cdb;
            }

        .btn-login {
            background-color: #FF7F00;
            color: white;
            font-size: 16px;
            padding: 15px 30px;
            width: 100%;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #e67e22;
            }

        .register-link {
            margin-top: 15px;
        }

            .register-link a {
                color: #4c9cdb;
                font-size: 14px;
                text-decoration: none;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }

        /* Cải thiện vị trí label */
        /* Form container */
        .form-floating {
            position: relative;
            margin-bottom: 2rem;
            padding-top: 16px;
        }

            /* Input styling */
            .form-floating input {
                width: 100%;
                padding: 10px;
                border-radius: 10px;
                border: 1px solid #ccc;
                font-size: 16px;
            }

            /* Label styling */
            .form-floating label {
                position: absolute;
                top: 5px;
                left: 7px;
                font-size: 16px;
                color: #aaa;
                pointer-events: none; /* Disable interaction with label */
                transition: none; /* No transition */
            }

            /* When input is focused, label stays in place */
            .form-floating input:focus + label,
            .form-floating input:not(:placeholder-shown) + label {
                color: #4c9cdb;
                font-size: 16px; /* Keeping the label size constant */
                top: -8px; /* Keep label at the same position */
            }

    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h2>Đăng nhập</h2>
            <form id="account" method="post">
                <div class="form-floating">
                    <label for="Input_Email">Tài khoản (Email)</label>
                    <input asp-for="Input.Email" id="Input_Email" name="email" class="form-control" autocomplete="off" autocorrect="off" autocapitalize="none" aria-required="true" placeholder=" ">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label for="Input_Password">Mật khẩu</label>
                    <input asp-for="Input.Password" id="Input_Password" name="password" class="form-control" autocomplete="off" autocorrect="off" autocapitalize="none" aria-required="true" placeholder=" ">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(ViewData["LoginErrorMessage"] as string))
                    {
                        <div class="invalid-feedback">@ViewData["LoginErrorMessage"]</div>
                    }
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn-login">Đăng nhập</button>
                </div>
                <div class="register-link">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
